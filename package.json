{
  "name": "file_to_client",
  "version": "1.0.3",
  "description": "This package is used to convert any text file to an html file that can be served as a webpage.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node lib/cli.js serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/malachi43/file_to_client.git"
  },
  "keywords": [
    "stream",
    "html",
    "transform",
    "directory"
  ],
  "author": "UKO CHIBUIKE MALACHI",
  "license": "MIT",
  "bin": {
    "ftc": "./lib/cli.js"
  },
  "bugs": {
    "url": "https://github.com/malachi43/file_to_client/issues"
  },
  "homepage": "https://github.com/malachi43/file_to_client#readme",
  "dependencies": {
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "glob": "^11.0.1"
  }
}